<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tag1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*위의 상품은 VAT포함 가격입니다."
            android:textColor="#000000"
            android:layout_margin="3dp"
            />


        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/tag1_tv"
            android:layout_alignStart="@+id/radioGridGroup"
            android:layout_alignTop="@+id/radioGridGroup"
            android:padding="6dp"
            >

            <TableRow
                android:gravity="center_horizontal"
                >

                <LinearLayout

                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/moon"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달풍선 30개"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3,300원"
                        android:textColor="#ED4C00"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/moon"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달풍선 50개"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,500원"
                        android:textColor="#ED4C00"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/moon"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달풍선 100개"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11,000원"
                        android:textColor="#ED4C00"
                        />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/moon"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달풍선 300개"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33,000원"
                        android:textColor="#ED4C00"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/moon"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달풍선 500개"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55,500원"
                        android:textColor="#ED4C00"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/moon"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달풍선 1000개"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="110,000원"
                        android:textColor="#ED4C00"
                        />
                </LinearLayout>
            </TableRow>
        </TableLayout>


        <com.example.user.dailytv.Module.RadioGridGroup

            android:id="@+id/radioGridGroup"
            android:layout_below="@id/tag1_tv"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TableRow

                android:id="@+id/radio_tablerow1"
                android:gravity="center"
                android:layout_marginTop="130dp"
                >

                <RadioButton
                    android:id="@+id/rad1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    />

                <RadioButton
                    android:id="@+id/rad2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    />

                <RadioButton
                    android:id="@+id/rad3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/radio_tablerow2"
                android:gravity="center"
                android:layout_marginTop="130dp">

                <RadioButton
                    android:id="@+id/rad4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <RadioButton
                    android:id="@+id/rad5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <RadioButton
                    android:id="@+id/rad6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>
        </com.example.user.dailytv.Module.RadioGridGroup>

        <RelativeLayout

            android:visibility="visible"
            android:id="@+id/price_layout"
            android:layout_below="@id/radioGridGroup"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="#EDEDED"
            android:padding="10dp"

            >
            <TextView
                android:id="@+id/tag2_tv"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="달풍선갯수 직접 입력"
                android:textSize="12dp"
                android:textColor="#000000"
                />

            <EditText

                android:id="@+id/moonCount_edit"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@id/tag2_tv"
                android:background="@drawable/button15"
                android:paddingRight="50dp"
                android:textColor="#000000"
                android:text="10"
                android:gravity="right|center_vertical"
                android:paddingBottom="1dp"
                android:textSize="15dp"
                android:inputType="number"
                />

            <TextView
                android:layout_below="@id/tag2_tv"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:text="개"
                android:layout_alignEnd="@id/moonCount_edit"
                android:paddingTop="10dp"
                android:gravity="center"
                android:textColor="#000000"
                />


            <EditText
                android:id="@+id/moonPrice_edit"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@id/tag2_tv"
                android:layout_toRightOf="@id/moonCount_edit"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button15"
                android:paddingRight="50dp"
                android:textColor="#000000"
                android:text="1100"
                android:gravity="right|center_vertical"
                android:paddingBottom="1dp"
                android:textSize="15dp"
                />

            <TextView
                android:layout_below="@id/tag2_tv"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:text="원"
                android:layout_alignEnd="@id/moonPrice_edit"
                android:paddingTop="10dp"
                android:gravity="center"
                android:textColor="#000000"
                />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/pricehow_layout"
            android:visibility="visible"
            android:layout_below="@id/price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            >



            <TextView
                android:id="@+id/tag3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제방법"
                android:layout_marginLeft="13dp"
                android:textColor="#000000"
                android:layout_centerVertical="true"

                />


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:entries="@array/payment"
                android:layout_centerHorizontal="true"
                >
            </Spinner>

            <Button
                android:id="@+id/payBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="#1E0300"
                android:textColor="#ffffff"
                android:text="구매하기"
                android:layout_alignParentRight="true"


                />
        </RelativeLayout>

        <RelativeLayout

            android:visibility="gone"
            android:id="@+id/payment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:layout_below="@id/price_layout"
            >


            <RelativeLayout
                android:id="@+id/paymentInfo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button88"
                android:padding="10dp"

                >
                <TextView
                    android:id="@+id/timeTag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제일시"
                    />

                <TextView

                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-01-02일"
                    android:layout_toRightOf="@id/timeTag_tv"
                    android:layout_marginLeft="20dp"


                    />
                <TextView
                    android:id="@+id/productNameTag_tv"
                    android:layout_below="@id/timeTag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품명"
                    />

                <TextView
                    android:layout_below="@id/time_tv"
                    android:id="@+id/productName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="달풍선"
                    android:layout_toRightOf="@id/timeTag_tv"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/paymentAmountTag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productNameTag_tv"
                    android:text="결제금액"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentAmount_tv"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/productName_tv"
                    android:layout_toRightOf="@id/paymentAmountTag_tv"
                    android:text="3,300원"
                    android:textColor="#93387B"

                    />
            </RelativeLayout>





            <TextView

                android:layout_below="@id/paymentInfo_layout"
                android:id="@+id/tag4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰번호"
                android:textColor="#000000"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                />

            <Spinner
                android:entries="@array/phone"
                android:id="@+id/spinner2"
                android:layout_below="@id/tag4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                >
            </Spinner>

            <EditText

                android:inputType="number"
                android:id="@+id/phoneNumber_edit"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:layout_alignBaseline="@id/spinner2"
                android:layout_below="@id/tag4_tv"
                android:layout_toRightOf="@id/spinner2"
                android:hint="-없이 숫자만 입력"
                android:layout_marginTop="13dp"
                android:background="#EDEDED"
                android:padding="3dp"
                android:textSize="13dp"
                />
            <Button

                android:padding="4dp"
                android:id="@+id/certRequestBtn"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:text="인증요청"
                android:layout_toRightOf="@id/phoneNumber_edit"
                android:layout_alignBottom="@id/phoneNumber_edit"
                android:background="@drawable/button8"
                android:layout_marginLeft="6dp"
                />

            <TextView

                android:layout_marginLeft="13dp"
                android:id="@+id/tag5_tv"
                android:layout_below="@id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="승인번호"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

            <EditText

                android:id="@+id/certNumber_edit"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@id/tag5_tv"
                android:background="#EDEDED"
                android:padding="3dp"
                android:textSize="13dp"
                android:hint="승인번호 입력"
                android:inputType="number"

                android:layout_alignLeft="@id/phoneNumber_edit"
                />


            <Button


                android:padding="4dp"
                android:id="@+id/certConfirmBtn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="인증"
                android:layout_toRightOf="@id/certNumber_edit"
                android:layout_alignBottom="@id/certNumber_edit"
                android:layout_marginLeft="6dp"
                android:background="#1E0300"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_below="@id/certNumber_edit"
                android:id="@+id/button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                >

                <Button

                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:text="취소"
                    android:layout_toRightOf="@id/phoneNumber_edit"
                    android:layout_alignBottom="@id/phoneNumber_edit"
                    android:background="#93387B"
                    android:layout_marginLeft="6dp"
                    android:textColor="#ffffff"
                    />

                <Button

                    android:id="@+id/okButton"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:textColor="#ffffff"
                    android:text="확인"
                    android:layout_toRightOf="@id/phoneNumber_edit"
                    android:layout_alignBottom="@id/phoneNumber_edit"
                    android:background="#93387B"
                    android:layout_marginLeft="20dp"

                    />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>