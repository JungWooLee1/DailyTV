<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"

    android:duplicateParentState="false"
    android:descendantFocusability="blocksDescendants"

    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/publisherimage"
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:src="@drawable/hog"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/nickname"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/publisherimage"
        android:layout_toRightOf="@id/publisherimage"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:text="고슴도치"
        />

    <ImageView
        android:layout_below="@id/publisherimage"
        android:id="@+id/videoimage"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"


        />
    <TextView
        android:layout_below="@id/videoimage"
        android:id="@+id/roomtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="펭귄님이 스트리밍중"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/date"
        android:textColor="@color/colorAccent"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017년 11월 27일 20:00:11"
        android:layout_below="@id/roomtitle"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/xbutton"

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/transparent"
        android:src="@drawable/xbutton2"
        android:scaleType="fitXY"
        android:padding="5dp"

        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />


</RelativeLayout>